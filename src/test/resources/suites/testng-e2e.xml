<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E2E Suite"
       verbose="1"
       parallel="tests">

    <parameter name="browser" value="${browser:chromium}"/>
    <parameter name="resolution" value="${resolution:FULL_HD}"/>
    <parameter name="headless" value="${headless:true}"/>

    <test name="E2E Tests">
        <groups>
            <run>
                <include name="e2e"/>
            </run>
        </groups>

        <packages>
            <package name="prestashop.tests.e2e.*"/>
        </packages>
    </test>
</suite>
