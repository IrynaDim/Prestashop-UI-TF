<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Functional Suite"
       verbose="1"
       parallel="tests">

    <parameter name="browser" value="${browser:chromium}"/>
    <parameter name="resolution" value="${resolution:FULL_HD}"/>
    <parameter name="headless" value="${headless:true}"/>

    <test name="Functional Tests">
        <groups>
            <run>
                <include name="functional"/>
            </run>
        </groups>

        <packages>
            <package name="prestashop.tests.functional.*"/>
        </packages>
    </test>
</suite>
